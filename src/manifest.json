{
	"manifest_version": 2,
	"name": "GitHub YouTrack Time Tracker",
	"version": "1.0.0",
	"description": "Add time tracking to YouTrack issues directly from GitHub PRs",
	"icons": {
		"48": "icon-48.png",
		"96": "icon-96.png"
	},
	"permissions": [
		"storage",
		"https://github.com/*",
		"https://*.youtrack.cloud/*"
	],
	"content_scripts": [
		{
			"matches": ["https://github.com/*/*/pull/*"],
			"js": ["content.js"],
			"css": ["content.css"]
		}
	],
	"background": {
		"page": "background.html"
	},
	"web_accessible_resources": [
		"*.js",
		"*.png"
	]
}
