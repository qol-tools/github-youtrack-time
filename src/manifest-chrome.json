{
	"manifest_version": 3,
	"name": "GitHub YouTrack Time Tracker",
	"version": "1.1.0",
	"description": "Add time tracking to YouTrack issues directly from GitHub PRs",
	"icons": {
		"48": "icon-48.png",
		"96": "icon-96.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "{bb1aa941-339c-47e0-854f-0a62a6de89e8}"
		}
	},
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://github.com/*",
		"https://*.youtrack.cloud/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://github.com/*"
			],
			"js": ["content.js"],
			"css": ["content.css"],
			"run_at": "document_end"
		}
	],
	"background": {
		"service_worker": "background-youtrack.js"
	},
	"web_accessible_resources": [
		{
			"resources": ["*.js", "*.png"],
			"matches": ["https://github.com/*"]
		}
	]
}
